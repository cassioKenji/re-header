{
  "manifest_version": 2,

  "name": "re:header",
  "description": "This extension will change your request headers for your Selenium scripts.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
   "default_icon": "images/icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
   ]
}